[MASTER]
# Specify a score threshold to be exceeded before program exits with error.
fail-under=5.0

[FORMAT]
# increase maximum line length to 200
max-line-length=200

[MESSAGES CONTROL]
# disable superflous parens and pascalcase warnings
disable=superfluous-parens,invalid-name

[BASIC]
# Allow both snake_case and PascalCase for variable and function names
good-names-rgxs=(_?[a-z0-9]+(_[a-z0-9]+)*$|^[A-Z][A-Z0-9_]+$)
bad-names-rgxs=(_?[A-Z0-9]+(_[A-Z0-9]+)*$)



